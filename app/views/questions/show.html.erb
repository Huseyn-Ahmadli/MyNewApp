<h1 class="mb-4"><%= @question.title %></h1>

<article class="card">
  <div class="card-body">
    <section class="card-text">
      <time datetime="<%= @question.created_at %>">
        <small><%= @question.created_at %></small>
      </time>
      <p class="lead  my-2">
        <%= @question.body %>
      </p>
    </section>



    <%= link_to 'Main', questions_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
    <%= link_to 'Delete', question_path(@question), class: 'btn btn-danger',
                data: { method: :delete, confirm: 'Are you sure?' } %>

    <hr class="my-3">
    <h2>Write your answer</h2>

    <%= render 'shared/errors', object: @answer %>

    <%= form_with model: [@question, @answer] do |f| %>
      <div class="mb-3 row">
        <div class='col-sm-2 col-form-label'>
          <%= f.label :body, class: 'col-sm-3 col-form-label' %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :body, placeholder: "Body", class: 'form-control' %>
        </div>
      </div>

      <%= f.submit "Submit Answer!", class: 'btn btn-primary' %>
    <% end %>




  </div>
</article>
